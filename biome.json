{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "assists": {
    "actions": {
      "source": {
        "sortJsxProps": "on",
        "useSortedKeys": "on"
      }
    },
    "enabled": true
  },
  "files": {
    "include": [
      "*.js",
      "*.json",
      "*/**/*.ts",
      "*/**/*.tsx",
      "*/**/*.mdx"
    ]
  },
  "formatter": {
    "bracketSpacing": true,
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "useEditorconfig": false
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "asNeeded",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "enabled": true,
      "jsxQuoteStyle": "single",
      "lineEnding": "lf",
      "lineWidth": 80,
      "quoteProperties": "asNeeded",
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "es5",
      "indentStyle": "space",
      "indentWidth": 2
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "complexity": {
        "noUselessEmptyExport": "off",
        "useLiteralKeys": "off"
      },
      "correctness": {
        "noNodejsModules": "off",
        "noUndeclaredDependencies": "off",
        "useImportExtensions": "off"
      },
      "style": {
        "noDefaultExport": "off",
        "noNamespace": "off",
        "useNamingConvention": "off",
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noReactSpecificProps": "off",
        "noExplicitAny": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      }
    }
  },
  "organizeImports": {
    "enabled": true,
    "include": [
      "*.js",
      "*.json",
      "*/**/*.ts",
      "*/**/*.tsx",
      "*/**/*.mdx"
    ]
  }
}